<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">

          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>

          <article class="new-review">
            <h3>Write a new review</h3>
            <%= form_for :review do |r| %>
            <label>Review: </label>
            <%= r.text_area :description %>
            <label>Rating :</label>
            <p>Rating: <%= f.select :rating, [1,2,3,4,5] %></p>
            <%= r.submit  %>
            <% end %>
          </article>

          <dt>Reviews</dt>
          <% reviews.each do |review| %>
            <%= render 'review', user: review[:user_id], description: review[:description], rating: review[:rating] %>
          <% end %>

      </div>
    </div>

  </article>

</section>
